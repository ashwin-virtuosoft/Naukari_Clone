@model Employer
@{
    ViewData["Title"] = "Employee Login Page";
}


<h1>Login Page Employer</h1>

<form id="myForm" method="POST" asp-action="">
    <div class="form-group">
        <label asp-for="Email">Enter your Email Id</label>
        <input asp-for="Email" class="form-control" id="email" required>
    </div>
    <div class="form-group">
        <label asp-for="Email">Enter your password</label>
        <input asp-for="Email" class="form-control" id="password" required>
    </div>
    <br><br>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/Register/EmpRegister" class="btn btn-link">Register Page</a>
</form>