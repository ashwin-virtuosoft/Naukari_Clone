@model Employer
@{

    ViewData["Title"] = "Register Page";
}
@Html.Raw(TempData["InsertEmployeMsg"])

<style>
    .form-control {
        width: 300px; /* Adjust width as needed */
    }
    .form-group{
        width:25%;
        display:inline-block;
        padding:20px;
        margin-left:40px;
    }
    .btn{
        margin-left: 60px;
    }
    h1{
        font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size:30px;

    }
    
</style>

<h1 align="center">Register Page Employer</h1>
<div class="form-control-sm">
<form id="myForm" method="POST" asp-action="EmpRegister">
    <div class="form-group">
        <label asp-for="EFName">Enter your First Name</label>
            <input asp-for="EFName" id="EFName" class="form-control form-control-sm" size="50" required />
        <span asp-validation-for="EFName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ELName">Enter your Last Name</label>
            <input asp-for="ELName" id="ELName" class="form-control form-control-sm" size="50" required>
        <span asp-validation-for="ELName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Enter your Email Id</label>
            <input asp-for="Email" id="email" class="form-control form-control-sm" size="50" required>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Enter your Phone Number</label>
            <input asp-for="PhoneNumber" id="phn" class="form-control form-control-sm" size="50" required>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Enter your password</label>
            <input type="password" id="pass" asp-for="Password" class="form-control form-control-sm" size="50" required>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="dob form-group">
        <label asp-for="DateOfBirth">Enter your Date of Birth</label>
            <input type="date" id="dob" asp-for="DateOfBirth" class="form-control form-control-sm" size="50" required>
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="dob form-group">
        <label asp-for="Designation">Enter your Designation</label>
            <input asp-for="Designation" id="Designation" class="form-control form-control-sm" size="50"  required />
        <span asp-validation-for="Designation" class="text-danger"></span>
    </div>

    <div class="dob form-group">
        <label asp-for="OrganizationName">Enter your Organization Name</label>
            <input asp-for="OrganizationName" id="Organization" class="form-control form-control-sm" size="50"  required />
        <span asp-validation-for="OrganizationName" class="text-danger"></span>
    </div>
    <br />

    <button id="check" type="submit" class="btn btn-dark">Register</button>
    <a href="/Login/EmpLogin" class="btn btn-link">Login Page</a>

</form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $("#check").click(function () {
        alert("Registered");
    });
function capitalizeFirstLetter(input) {
        var words = input.value.toLowerCase().split(' ');
        for (var i = 0; i < words.length; i++) {
            words[i] = words[i].charAt(0).toUpperCase() + words[i].substring(1);
        }
        input.value = words.join(' ');
    }


    function validateEmailFormat(input) {
        var email = input.value;
        var emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
        if (!emailRegex.test(email)) {
            alert('Please enter a valid email address.');
            input.value = '';
        }
    }


    function validatePhoneNumber(input) {
        var phoneNumber = input.value;
        var phoneNumberRegex = /^\d{10}$/;
        if (!phoneNumberRegex.test(phoneNumber)) {
            alert('Please enter a valid 10-digit phone number.');
            input.value = '';
        }
    }


    function validatePasswordLength(input) {
        var password = input.value;
        if (password.length < 8) {
            alert('Password must be at least 8 characters long.');
            input.value = '';
        }
    }

    function validateDesignation(input) {
        var Designation = input.value;
            alert('Required');
            input.value = '';
        }
    }
    function validateOrganization(input) {
        var Organization = input.value;
        alert('Required');
        input.value = '';
    }
        }



    $('#SeekerForm').submit(function (event) {

        var fnameInput = $('#EFName');
        capitalizeFirstLetter(fnameInput[0]);

        var lnameInput = $('#ELName');
        capitalizeFirstLetter(lnameInput[0]);


        var emailInput = $('#email');
        validateEmailFormat(emailInput[0]);


        var phnInput = $('#phn');
        validatePhoneNumber(phnInput[0]);

        var passInput = $('#pass');
        validatePasswordLength(passInput[0]);

        var DesInput = $('#Designation');
        validateDesignation(DesInput[0]);

        var OrgInput = $('#Organization');
        validateOrganization(OrgInput[0]);


        if (fnameInput.val() === '' || lnameInput.val() === '' || emailInput.val() === '' || phnInput.val() === '' || passInput.val() === '' || DesInput.val()==='' || OrgInput.val()==='') {
            event.preventDefault();
        } else {

            alert('Registration successful!');
        }
    });
</script>